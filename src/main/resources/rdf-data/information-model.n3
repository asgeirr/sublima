# The information model, describing the relationship between the
# vocabularies that we use. 

# Issues addressed with this file:
#  * https://jira.computas.no/browse/OKE-49

@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix dc: <http://purl.org/dc/elements/1.1/> .
@prefix owl: <http://www.w3.org/2002/07/owl#> .
@prefix foaf: <http://xmlns.com/foaf/0.1/> .
@prefix lingvoj: <http://www.lingvoj.org/ontology#> .
@prefix dcmitype: <http://purl.org/dc/dcmitype/> .
@prefix dct: <http://purl.org/dc/terms/> .
@prefix sub: <http://xmlns.computas.com/sublima#> . 
@prefix wdr: <http://www.w3.org/2007/05/powder#> .
@prefix sioc: <http://rdfs.org/sioc/ns#> .

dc:subject 		rdfs:range 	owl:Thing ;
			a 		owl:ObjectProperty ;
			rdfs:domain	sub:Resource .

	
dc:title		rdfs:range 	rdfs:Literal ;		
			a 		owl:AnnotationProperty ;
			rdfs:domain	sub:Resource .

dc:description		rdfs:range	rdf:XMLLiteral ;
			a 		owl:AnnotationProperty ;
			rdfs:domain 	sub:Resource .

dc:language		rdfs:range 	lingvoj:Lingvo ; # Many alternatives
			a 		owl:ObjectProperty ;
			rdfs:domain 	sub:Resource .

dc:publisher		rdfs:range	foaf:Agent ;
			a 		owl:ObjectProperty ;
			rdfs:domain 	sub:Resource .

dc:identifier		rdfs:range	sub:LocalURI ; 
			a 		owl:ObjectProperty ;
			a		owl:InverseFunctionalProperty ;	
			rdfs:domain 	sub:Resource .

dc:type			rdfs:range 	dct:DCMIType ;
			a 		owl:ObjectProperty ;
			rdfs:domain 	sub:Resource .

dc:audience		rdfs:range 	sub:Audience ;
			a 		owl:ObjectProperty ;
			rdfs:domain 	sub:Resource .

dct:dateAccepted 	rdfs:range 	rdfs:Literal ; # Use xsd:dateTime
			a 		owl:DatatypeProperty ;	
			rdfs:domain 	sub:Resource .

dct:dateSubmitted 	rdfs:range 	rdfs:Literal ; # Use xsd:dateTime	
			a 		owl:DatatypeProperty ;	
			rdfs:domain 	sub:Resource .

wdr:describedBy		rdfs:range 	wdr:DR ;
			a 		owl:ObjectProperty ;
			rdfs:domain 	sub:Resource .

sub:LocalURI		rdfs:subClassOf	sioc:Item ;
			rdfs:comment	"The local URI assigned to a URI"@en.

sub:Audience		rdfs:comment 	"The different audiences"@en;
			rdfs:subClassOf	foaf:Agent;
			a 		rdfs:Class .


sub:committer		rdfs:range 	sioc:User ;
			a 		owl:ObjectProperty ;
			rdfs:domain	sub:Resource . 

sub:Resource		a 		rdfs:Class;
			rdfs:subClassOf	rdfs:Resource;
			owl:unionOf	sioc:Item,sioc:Site .
			