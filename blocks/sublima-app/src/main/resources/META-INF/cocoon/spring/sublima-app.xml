<?xml version="1.0" encoding="UTF-8"?>
<!--$Id: servlet-service.xml 578865 2007-09-24 16:09:46Z reinhard $ -->
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:pipeline="http://cocoon.apache.org/schema/pipeline"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
                           http://cocoon.apache.org/schema/pipeline http://cocoon.apache.org/schema/pipeline/cocoon-pipeline-1.0.xsd"
       default-init-method="init">

  <bean name="com.computas.sublima.app.fascade.SearchFascade"
        class="com.computas.sublima.app.fascade.SearchFascade">
    <property name="sparqlDispatcher" ref="com.computas.sublima.query.SparqlDispatcher"/>
    <property name="appMan" ref="org.apache.cocoon.auth.ApplicationManager"/>
  </bean>

  <bean name="com.computas.sublima.app.fascade.RedirectFascade"
        class="com.computas.sublima.app.fascade.RedirectFascade"/>


  <bean name="com.computas.sublima.app.fascade.FeedbackFascade"
        class="com.computas.sublima.app.fascade.FeedbackFascade">
    <property name="sparulDispatcher" ref="com.computas.sublima.query.SparulDispatcher"/>
    <property name="appMan" ref="org.apache.cocoon.auth.ApplicationManager"/>
  </bean>

  <bean name="com.computas.sublima.app.fascade.AdminFascade"
        class="com.computas.sublima.app.fascade.AdminFascade">
    <property name="sparulDispatcher" ref="com.computas.sublima.query.SparulDispatcher"/>
  </bean>

  <bean name="com.computas.sublima.app.fascade.PublisherFascade"
        class="com.computas.sublima.app.fascade.PublisherFascade">
    <property name="sparulDispatcher" ref="com.computas.sublima.query.SparulDispatcher"/>
    <property name="sparqlDispatcher" ref="com.computas.sublima.query.SparqlDispatcher"/>
  </bean>

  <bean name="com.computas.sublima.app.fascade.ResourceFascade"
        class="com.computas.sublima.app.fascade.ResourceFascade">
    <property name="sparulDispatcher" ref="com.computas.sublima.query.SparulDispatcher"/>
  </bean>

  <bean name="com.computas.sublima.app.fascade.TopicFascade"
        class="com.computas.sublima.app.fascade.TopicFascade">
    <property name="sparulDispatcher" ref="com.computas.sublima.query.SparulDispatcher"/>
    <property name="appMan" ref="org.apache.cocoon.auth.ApplicationManager"/>
  </bean>

  <bean name="com.computas.sublima.app.fascade.UserFascade"
        class="com.computas.sublima.app.fascade.UserFascade">
    <property name="sparulDispatcher" ref="com.computas.sublima.query.SparulDispatcher"/>
  </bean>

  <bean name="com.computas.sublima.app.fascade.LinkcheckFascade"
        class="com.computas.sublima.app.fascade.LinkcheckFascade">
    <property name="sparqlDispatcher" ref="com.computas.sublima.query.SparqlDispatcher"/>
  </bean>

  <bean name="com.computas.sublima.app.fascade.LoginFascade"
        class="com.computas.sublima.app.fascade.LoginFascade">
  </bean>

  <!-- This is a simple security handler: -->
  <bean name="org.apache.cocoon.auth.SecurityHandler/Sublima"
        class="com.computas.sublima.app.controller.admin.Login"
        scope="singleton">
  </bean>

  <!--  This is the standard application -->
  <bean name="org.apache.cocoon.auth.Application/Sublima"
        class="org.apache.cocoon.auth.impl.StandardApplication"
        scope="singleton">
    <property name="securityHandler" ref="org.apache.cocoon.auth.SecurityHandler/Sublima"/>
  </bean>

</beans>
