<?xml version="1.0" encoding="UTF-8"?>
<fd:form
        xmlns:fd="http://apache.org/cocoon/forms/1.0#definition">

  <fd:widgets>

    <fd:field id="url" required="true">
      <fd:label>URL:</fd:label>
      <fd:datatype base="string"/>
    </fd:field>

    <fd:field id="title" required="true">
      <fd:label>Tittel:</fd:label>
      <fd:datatype base="string"/>
    </fd:field>

    <fd:field id="description">
      <fd:label>Beskrivelse:</fd:label>
      <fd:datatype base="string"/>
      <fd:initial-value>...</fd:initial-value>
    </fd:field>

    <fd:multivaluefield id="language">
      <fd:label>Språk:</fd:label>
      <fd:datatype base="string"/>
      <fd:selection-list>
      </fd:selection-list>
    </fd:multivaluefield>

    <fd:multivaluefield id="media">
      <fd:label>Media:</fd:label>
      <fd:datatype base="string"/>
      <fd:selection-list>
      </fd:selection-list>
    </fd:multivaluefield>

    <fd:multivaluefield id="audience">
      <fd:label>Målgruppe:</fd:label>
      <fd:datatype base="string"/>
      <fd:selection-list>
      </fd:selection-list>
    </fd:multivaluefield>

    <fd:multivaluefield id="topics">
      <fd:label>Emner:</fd:label>
      <fd:datatype base="string"/>
      <fd:selection-list>
      </fd:selection-list>
    </fd:multivaluefield>

    <fd:field id="status">
      <fd:label>Status:</fd:label>
      <fd:datatype base="string"/>
    </fd:field>

    <fd:field id="comment">
      <fd:label>Kommentar:</fd:label>
      <fd:datatype base="string"/>
      <fd:initial-value>...</fd:initial-value>
    </fd:field>

  </fd:widgets>

</fd:form>