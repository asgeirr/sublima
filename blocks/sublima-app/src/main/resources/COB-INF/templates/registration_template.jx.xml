  <head>
    <title>First form!</title>
  </head>
  <body>
    <ft:form-template action="firstform" method="POST">
   <ft:widget-label id="name"/>
      <ft:widget id="name"/>
      <br/>
      <ft:widget-label id="email"/>
      <ft:widget id="email"/>
      <br/>
      <ft:widget-label id="age"/>
      <ft:widget id="age"/>
      <br/>
      <ft:widget-label id="password"/>
