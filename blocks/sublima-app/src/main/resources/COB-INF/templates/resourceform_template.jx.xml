<?xml version="1.0" encoding="UTF-8"?>
<html xmlns:ft="http://apache.org/cocoon/forms/1.0#template"
  xmlns:fi="http://apache.org/cocoon/forms/1.0#instance"
  xmlns:jx="http://apache.org/cocoon/templates/jx/1.0">

  <jx:import uri="servlet:forms:/resource/internal/generation/jx-macros.xml"/>

  <head>
    <title>Registration form</title>
  </head>
  <body>
    <h1>Registration</h1>
      <ft:form-template action="firstform" method="POST">

        <fi:group>

          <fi:styling layout="columns"/>

          <fi:items>

            <ft:widget-label id="url"/>
            <ft:widget id="url"/>

            <ft:widget-label id="title"/>
            <ft:widget id="title"/>

            <ft:widget-label id="description"/>
            <ft:widget id="description">
              <fi:styling type="textarea"/>
            </ft:widget>

            <ft:widget-label id="language"/>
            <ft:widget id="language"/>

            <ft:widget-label id="media"/>
            <ft:widget id="media"/>

            <ft:widget-label id="audience"/>
            <ft:widget id="audience"/>

            <ft:widget-label id="topics"/>
            <ft:widget id="topics">
              <fi:styling list-type="double-listbox">
                <fi:available-label>Tilgjengelig</fi:available-label>
                <fi:selected-label>Valgt</fi:selected-label>
              </fi:styling>
            </ft:widget>

            <ft:widget-label id="status"/>
            <ft:widget id="status"/>

            <ft:widget-label id="comment"/>
            <ft:widget id="comment">
              <fi:styling type="textarea"/>
            </ft:widget>

          </fi:items>

        </fi:group>

        <input type="submit"/>

      </ft:form-template>
  </body>
</html>