    <c:content>
        <c:text>
            <h3>Lest inn data til databasen</h3>
            <p>
                Angi fil/URL og konverteringstypen i feltene nedenfor.<br/><br/>
                Format for filer:<br/>
                file:\Sti\til\fil\information-model.n3<br/>
                <br/>
                Format for URL:<br/>
                http://www.urltilfil.com/information-model.n3<br/>
            </p>
        </c:text>
      <c:upload>
        <form name="upload" action="database" method="POST">
      <table>
        <tr>
          <td align="right">
            <label for="location">Lokasjon</label>
          </td>
          <td>
            <input id="location" type="text" name="location" size="40"/>
          </td>
        </tr>
        <tr>
          <td align="right">
            <label for="tittel">Type</label>
          </td>
          <td>
            <select name="type">
              <option value="RDF/XML">RDF/XML</option>
              <option value="N3">N3</option>
              <option value="Turtle">Turtle</option>
            </select>
          </td>
        </tr>
        <tr>
          <td></td>
          <td>
            <input type="submit" value="Les inn"/>
          </td>
        </tr>
      </table>
    </form>
      </c:upload>
